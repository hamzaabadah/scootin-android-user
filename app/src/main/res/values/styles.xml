<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="custom_font_style_red" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">@font/mons_medium</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="custom_font_style_white" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">@font/mons_medium</item>
        <item name="android:textColor">@color/text_color_secondary</item>
    </style>

    <style name="custom_font_style_black" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">@font/mons_medium</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="custom_font_style_black_small" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/mons_medium</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="custom_font_bold_style_black" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/text_color_primary</item>
    </style>

    <style name="button_red" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_size_18</item>
        <item name="android:textColor">@color/text_color_secondary</item>
        <item name="android:fontFamily">@font/mons_medium</item>
        <item name="android:background">@drawable/gradient_button</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorAccent">@color/text_color_primary</item>
        <item name="hintTextColor">@color/text_color_primary</item>
        <item name="boxStrokeColor">@color/text_input_hint_color</item>
    </style>

    <style name="dialog_theme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/dialog_button.positive</item>
    </style>
    <style name="dialog_button">
        <item name="android:background">@drawable/gradient_button</item>
    </style>
    <style name="dialog_button.positive">
        <item name="android:textColor">@color/text_color_secondary</item>
        <item name="android:height">30dp</item>
        <item name="android:minHeight">30dp</item>
    </style>
    <style name="AppAutoTextCompleteStyle" parent="Base.V7.Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textSize">16dp</item>
    </style>

</resources>
