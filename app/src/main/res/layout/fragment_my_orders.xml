<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_background">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/myOrder_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="66dp"
            android:src="@drawable/ic_order_history_card"

            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back_arrow" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/status_bag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_30"
            android:src="@drawable/ic_order_status_bg"

            app:layout_constraintTop_toBottomOf="@id/myOrder_header"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bag_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="31dp"
            android:text="@string/_0720280002"
            android:textSize="12sp"
            android:textStyle="bold"
            style="@style/custom_font_bold_style_black"

            app:layout_constraintStart_toStartOf="@id/status_bag"
            app:layout_constraintTop_toBottomOf="@id/myOrder_header" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bag_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help"
            android:layout_marginStart="125dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#D10000"
            style="@style/custom_font_bold_style_black"

            app:layout_constraintTop_toTopOf="@+id/status_bag"
            app:layout_constraintStart_toEndOf="@id/bag_order_id"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bag_delivery_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginTop="3.2dp"
            style="@style/custom_font_bold_style_black"
            android:text="@string/essential_grocery"

            app:layout_constraintTop_toBottomOf="@id/bag_order_id"
            app:layout_constraintStart_toStartOf="@id/status_bag"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ongoing"
            android:textSize="11sp"
            android:layout_marginTop="4.4dp"
            android:textStyle="bold"
            android:textColor="#FF834A"
            style="@style/custom_font_bold_style_black"
            android:layout_marginStart="57dp"

            app:layout_constraintTop_toBottomOf="@id/bag_help"
            app:layout_constraintStart_toEndOf="@id/bag_delivery_type"
            tools:ignore="SmallSp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/bag_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_27_07_2020"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:layout_marginStart="120dp"
            style="@style/custom_font_bold_style_black"

            app:layout_constraintStart_toStartOf="@id/status_bag"
            app:layout_constraintTop_toBottomOf="@id/bag_delivery_type"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/Track"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="12sp"
            style="@style/custom_font_bold_style_black"
            android:text="@string/track"
            android:textColor="#FFFFFF"
            android:layout_marginTop="23dp"
            android:gravity="center"

            app:layout_constraintTop_toBottomOf="@id/bag_date"/>

        <androidx.appcompat.widget.AppCompatImageView
