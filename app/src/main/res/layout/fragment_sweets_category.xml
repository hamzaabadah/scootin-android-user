<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_background">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/user_location"
            style="@style/custom_font_style_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_user_location"
            android:drawablePadding="8dp"
            android:paddingStart="@dimen/home_screen_margin_start"
            android:paddingTop="20dp"
            android:text="Finding location.."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:background="@android:color/white"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/user_location" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/express"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/home_screen_margin_start"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:srcCompat="@drawable/ic_sweet_snack_bakery_big_card" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/city_wide_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/home_screen_margin_start"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line"
            app:srcCompat="@drawable/bg_city_wide_delivery" />

        <View
            android:id="@+id/emptyView"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"
            android:layout_margin="22dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/express"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/sweets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/home_screen_margin_start"
            android:layout_marginTop="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/emptyView"
            app:srcCompat="@drawable/ic_sweets" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bakery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="@dimen/home_screen_margin_start"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sweets"
            app:srcCompat="@drawable/ic_bakery" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/snacks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginStart="@dimen/home_screen_margin_start"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bakery"
            app:srcCompat="@drawable/ic_snacks" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/cakenbouquet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="@dimen/home_screen_margin_start"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/snacks"
            app:srcCompat="@drawable/ic_cake_bouquet_combo" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>