<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cart"
    app:startDestination="@id/cart_fragment">

    <fragment
        android:id="@+id/cart_fragment"
        android:name="com.scootin.view.fragment.cart.CartListFragment"
        android:label="Registered">
        <action
            android:id="@+id/action_cart_fragment_to_card_payment"
            app:destination="@id/card_payment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/card_payment"
        android:name="com.scootin.view.fragment.cart.CardPaymentPageFragment"
        android:label="Registered" />
</navigation>
